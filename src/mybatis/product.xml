<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="product">
 	<insert id="productInsert" parameterType="org.shoppingMall.vo.ProductVO">
 		INSERT INTO TBL_PRODUCT
		(PRODUCTNUM, PRODUCTNAME, PRODUCTPRICE, PRODUCTSTOCK, PRODUCTCATEGORIES)
		VALUES(SEQ_PRODUCT.NEXTVAL, #{productName}, #{productPrice}, #{productStock}, #{productCategories})
 	</insert>
 	
 	<select id="getSeq" resultType="_int">
 		SELECT SEQ_PRODUCT.CURRVAL FROM DUAL
 	</select>
 	
 	<select id="nextSeq" resultType="_int">
 		SELECT MAX(PRODUCTNUM)+1 FROM TBL_PRODUCT
 	</select>
 	
 	<update id="productAddUpdate" parameterType="org.shoppingMall.vo.ProductVO">
 		UPDATE TBL_PRODUCT
		SET PRODUCTPRICE=#{productPrice}, PRODUCTSTOCK=#{productStock}
		WHERE PRODUCTNUM=#{productNum}
 	</update>
 	
 	<select id="productSelectOne" parameterType="_int" resultType="org.shoppingMall.vo.ProductVO">
 		SELECT * FROM TBL_PRODUCT WHERE PRODUCTNUM = #{productNum}
 	</select>
 	
 	<delete id="productAddDelete" parameterType="_int">
 		DELETE FROM TBL_PRODUCT
		WHERE PRODUCTNUM=#{productNum}
 	</delete>
 	
 </mapper>
 
 
 
 
 
 